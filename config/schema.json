{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LLM/NLP Hyperparameters",
  "type": "object",
  "required": ["src_tokenizer_regex", "tgt_tokenizer_regex", "data_path"],
  "properties": {
    "src_tokenizer_regex": {
      "type": "string",
      "description": "Word level parser used for tokenizer training and tokenizing"
    },
    "tgt_tokenizer_regex": {
      "type": "string",
      "description": "Word level parser used for tokenizer training and tokenizing"
    },
    "data_path": {
      "type": "string",
      "description": "Word level parser used for tokenizer training and tokenizing"
    },
    "learning_rate": {
      "type": "number",
      "minimum": 1e-7,
      "maximum": 0.1,
      "description": "Step size for optimizer"
    },
    "batch_size": {
      "type": "integer",
      "minimum": 1,
      "maximum": 1024
    },
    "epochs": {
      "type": "integer",
      "minimum": 1
    },
    "optimizer": {
      "type": "string",
      "enum": ["adam", "sgd", "rmsprop"],
      "default": "adam"
    },
    "dropout": {
      "type": "number",
      "minimum": 0,
      "maximum": 0.9,
      "default": 0.2
    },
    "early_stopping": {
      "type": "boolean",
      "default": true
    }
  }
}